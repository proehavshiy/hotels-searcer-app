{
  "name": "ahotel-searcher",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.5",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "formik": "^2.2.9",
    "react": "^18.2.0",
    "react-datepicker": "^4.8.0",
    "react-dom": "^18.2.0",
    "react-redux": "^7.2.8",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.2.1",
    "sass": "^1.54.9",
    "swiper": "^8.4.2",
    "uniqid": "^5.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "serve": "serve -s build",
    "build-and-serve": "npm run build && npm run serve"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "eslint-config-airbnb"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "import/no-unresolved": [
        0
      ],
      "react/jsx-no-bind": [
        0
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true,
          "enforceInClassFields": true
        }
      ],
      "react/prop-types": [
        "off"
      ],
      "import/prefer-default-export": [
        "off"
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "required": {
            "some": [
              "nesting",
              "id"
            ]
          }
        }
      ],
      "no-console": "warn",
      "prefer-const": "error",
      "quotes": [
        "error",
        "single"
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "indent": [
        "warn",
        2
      ],
      "max-len": [
        "error",
        {
          "ignorePattern": "d='([\\s\\S]*?)'"
        },
        {
          "code": 150
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index",
            "object",
            "type"
          ],
          "newlines-between": "always-and-inside-groups"
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-airbnb": "^19.0.4"
  }
}